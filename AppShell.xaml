<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WorkoutDiary.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WorkoutDiary.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="WorkoutDiary">

    <ShellContent
        Title="Dziennik ćwiczeń"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        Icon="{OnPlatform 'icon_notes.png', Android='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}"/>
    <ShellContent Title="Add Exercise" Route="AddExercisePage" ContentTemplate="{DataTemplate local:AddExercisePage}" />
</Shell>
