<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WorkoutDiary.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WorkoutDiary.Views"
    xmlns:views="clr-namespace:WorkoutDiary.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.ForegroundColor="{DynamicResource PrimaryTextColor}"
    Shell.BackgroundColor="{DynamicResource PageBackgroundColor}"
    Shell.TabBarBackgroundColor="White"
   
Shell.FlyoutBackdrop="White"
    Shell.TabBarForegroundColor="black"
    Title="WorkoutDiary">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">


        <Tab Title="Ćwiczenia" Icon="book" FlyoutItemIsVisible="True">
            <ShellContent
        Title="Dziennik ćwiczeń" 
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        Icon="{OnPlatform 'icon_notes.png', Android='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}"/>
        </Tab>
        <!--<Tab Title="Statystyka" Icon="graph">
            <ShellContent Title="Statystyka" Route="StatisticPage" ContentTemplate="{DataTemplate local:StatisticPage}" />
        </Tab>-->
        <Tab Title="Plan" Icon="journal">
            <ShellContent Title="Plan treningowy" Route="RotationPlanPage" ContentTemplate="{DataTemplate views:RotationPlanPage}" />
        </Tab>
        <Tab FlyoutItemIsVisible="False" Title="Statystyka" Icon="graph2" >
            <ShellContent Title="Statystyka ćwiczeń siłowych" Route="StatisticPage" ContentTemplate="{DataTemplate local:StatisticPage}" />
        </Tab>
        <Tab FlyoutItemIsVisible="False" Title="Ustawienia" Icon="setting">
            <ShellContent Title="Ustawienia" Route="SettingPage" ContentTemplate="{DataTemplate local:SettingPage}" />
        </Tab>

        <!--<ShellContent 
        FlyoutItemIsVisible="False"
        Title="Statystyka-cardio" 
        Route="StatisticCardioPage"
        ContentTemplate="{DataTemplate local:StatisticCardioPage}" />-->
    </FlyoutItem>
    <ShellContent Title="Cardio" Route="StatisticCardioPage" ContentTemplate="{DataTemplate local:StatisticCardioPage}" />
    <ShellContent FlyoutItemIsVisible="True" Title="Dodaj ćwiczenie" Route="AddExercisePage" ContentTemplate="{DataTemplate local:AddExercisePage}" />
    <ShellContent FlyoutItemIsVisible="True" Title="Dodaj plan" Route="AddTrainingPlanPage" ContentTemplate="{DataTemplate local:AddTrainingPlanPage}" />
    <!--<Shell.FlyoutFooter>
        <Grid BackgroundColor="Transparent" Padding="10">
            <Border BackgroundColor="red">
                <Button Text="Wyczyść dziennik ćwiczeń"
                Command="{Binding DeleteAll}"
                BackgroundColor="Black"
                TextColor="red"/>
            </Border>
        </Grid>
    </Shell.FlyoutFooter>-->

</Shell>
