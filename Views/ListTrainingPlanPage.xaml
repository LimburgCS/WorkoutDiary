<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutDiary.Views.ListTrainingPlanPage"
             Title="ListTrainingPlanPage">
    <CollectionView
    ItemsSource="{Binding Plans}"
    SelectionMode="Single"
        SelectionChangedCommand="{Binding SelectTrainingCommand}"
    SelectedItem="{Binding SelectedPlan}">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="5" BorderColor="Gray">
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}" FontSize="18" />
                        <Label Text="{Binding Description}" FontSize="13" TextColor="Gray"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>