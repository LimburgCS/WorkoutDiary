<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutDiary.Views.TrainingPlanPage"
             xmlns:viewodel="clr-namespace:WorkoutDiary.ViewModels"
             Title="Plan treningowy" Shell.TitleColor="{DynamicResource PrimaryColor}" BackgroundColor="#E5E5E5">



    <ContentPage.ToolbarItems >
        <ToolbarItem Text="Add" Command="{Binding NewPlan}" IconImageSource="{FontImage Glyph='+', Color=Black, Size=22}" />
    </ContentPage.ToolbarItems>
    <Grid RowDefinitions="auto,*,auto">


        <ScrollView Margin="5" Grid.Row="1" VerticalOptions="Start">

            <StackLayout>


                <CollectionView x:Name="TrainingPlanCollectionView"
                         ItemsSource="{Binding TrainingPlan}"
                        Margin="20"
                        SelectionMode="Single"
                        
                        SelectionChangedCommand="{Binding SelectPlan}"
                        SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}">
                    <CollectionView.ItemsLayout>

                        <LinearItemsLayout Orientation="Vertical" />

                    </CollectionView.ItemsLayout>



                    <CollectionView.ItemTemplate>

                        <DataTemplate >
                            <VerticalStackLayout x:Name="Vertical" BackgroundColor="Transparent">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <VisualState.Setters>
                                                <Setter TargetName="Vertical" Property="Scale" Value="1" />
                                                <Setter TargetName="Vertical" Property="TranslationY" Value="0" />
                                                <Setter TargetName="Vertical" Property="BackgroundColor" Value="Transparent" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <VisualState x:Name="Selected">
                                            <VisualState.Setters>
                                                <Setter TargetName="Vertical" Property="Scale" Value="0.96" />
                                                <Setter TargetName="Vertical" Property="TranslationY" Value="2" />
                                                <Setter TargetName="Vertical" Property="BackgroundColor" Value="Transparent" />
                                                
                              
                                
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <Frame
                                CornerRadius="10"
                                BackgroundColor="White"
                                Margin="5"
                                HasShadow="True"
                                InputTransparent="True">



                                    <Grid  BackgroundColor="{DynamicResource PageBackgroundColor}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />

                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Row="0" Grid.Column="2" TextColor="{DynamicResource PrimaryColor}" 
                                                Text="X" Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}},
                                            Path=BindingContext.Delete}" 
                                                CommandParameter="{Binding .}" FontSize="12" HeightRequest="20"
                                                Padding="0" BackgroundColor="Transparent" HorizontalOptions="End" 
                                                VerticalOptions="Start"/>
                                        <Label  Grid.Row="0" Grid.Column="0" TextDecorations="Underline"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Start"
                                                Text="Poniedziałek" FontSize="12"  />
                                        <Label  Grid.Row="1" Grid.Column="0"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding MondayParts}" FontSize="15"  />

                                        <Label  Grid.Row="2" Grid.Column="0" TextDecorations="Underline"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Start"
                                                Text="Wtorek" FontSize="12"  />
                                        <Label  Grid.Row="3" Grid.Column="0"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding TuesdayParts}" FontSize="15"  />

                                        <Label  Grid.Row="4" Grid.Column="0" TextDecorations="Underline"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Start"
                                                Text="Środa" FontSize="12"  />
                                        <Label  Grid.Row="5" Grid.Column="0"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding WednesdayParts}" FontSize="15"  />

                                        <Label  Grid.Row="6" Grid.Column="0" TextDecorations="Underline"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Start"
                                                Text="Czwartek" FontSize="12"  />
                                        <Label  Grid.Row="7" Grid.Column="0"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding ThursdayParts}" FontSize="15"  />

                                        <Label  Grid.Row="8" Grid.Column="0" TextDecorations="Underline"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Start"
                                                Text="Piątek" FontSize="12"  />
                                        <Label  Grid.Row="9" Grid.Column="0"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding FridayParts}" FontSize="15"  />

                                        <Label  Grid.Row="10" Grid.Column="0" TextDecorations="Underline"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Start"
                                                Text="Sobota" FontSize="12"  />
                                        <Label  Grid.Row="11" Grid.Column="0"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding SaturdayParts}" FontSize="15"  />

                                        <Label  Grid.Row="12" Grid.Column="0" TextDecorations="Underline"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Start"
                                                Text="Niedziela" FontSize="12"  />
                                        <Label  Grid.Row="13" Grid.Column="0"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding SundayParts}" FontSize="15"  />



                                    </Grid>

                                </Frame>
                            </VerticalStackLayout>
                        </DataTemplate>

                    </CollectionView.ItemTemplate>

                </CollectionView>


            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
