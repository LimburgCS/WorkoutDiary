<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutDiary.Views.TrainingPlanPage"
             xmlns:viewodel="clr-namespace:WorkoutDiary.ViewModels" >







    <Grid RowDefinitions="auto">

        <ScrollView Margin="5" Grid.Row="0" VerticalOptions="Start">

            <StackLayout>


                <CollectionView x:Name="TrainingPlanCollectionView"
                ItemsSource="{Binding TrainingPlan}"
                Margin="20"
                SelectionMode="Single"
                SelectionChangedCommand="{Binding SelectPlan}"
                SelectionChangedCommandParameter="{Binding Source={x:Reference TrainingPlanCollectionView}, Path=SelectedItem}">

                    <CollectionView.ItemsLayout>

                        <LinearItemsLayout Orientation="Vertical" />

                    </CollectionView.ItemsLayout>



                    <CollectionView.ItemTemplate>

                        <DataTemplate >
                            <VerticalStackLayout x:Name="Vertical" BackgroundColor="Transparent">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <VisualState.Setters>
                                                <Setter TargetName="Vertical" Property="Scale" Value="1" />
                                                <Setter TargetName="Vertical" Property="TranslationY" Value="0" />
                                                <Setter TargetName="Vertical" Property="BackgroundColor" Value="Transparent" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <VisualState x:Name="Selected">
                                            <VisualState.Setters>
                                                <Setter TargetName="Vertical" Property="Scale" Value="0.96" />
                                                <Setter TargetName="Vertical" Property="TranslationY" Value="2" />
                                                <Setter TargetName="Vertical" Property="BackgroundColor" Value="Transparent" />
                                                
                              
                                
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <Border
                                            Stroke="Transparent"
                                            Background="White"
                                            StrokeThickness="0"
                                            Margin="5"
                                            Padding="15"
                                            StrokeShape="RoundRectangle 10">

                                    <Border.Shadow>
                                        <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,1" />
                                    </Border.Shadow>



                                    <Grid  BackgroundColor="{DynamicResource PageBackgroundColor}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />

                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Row="0" Grid.Column="2" TextColor="{DynamicResource PrimaryColor}" ZIndex="999"
                                                Text="X" Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}},
                                            Path=BindingContext.Delete}" 
                                                CommandParameter="{Binding .}" FontSize="12" HeightRequest="20"
                                                Padding="0" BackgroundColor="Transparent" HorizontalOptions="End" 
                                                VerticalOptions="Start"/>
                                        <Label  Grid.Row="0" Grid.Column="0" TextDecorations="Underline"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Start"
                                                Text="Poniedziałek" FontSize="12"  />
                                        <Label  Grid.Row="1" Grid.Column="0"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding MondayParts}" FontSize="15"  />

                                        <Label  Grid.Row="2" Grid.Column="0" TextDecorations="Underline"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Start"
                                                Text="Wtorek" FontSize="12"  />
                                        <Label  Grid.Row="3" Grid.Column="0"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding TuesdayParts}" FontSize="15"  />

                                        <Label  Grid.Row="4" Grid.Column="0" TextDecorations="Underline"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Start"
                                                Text="Środa" FontSize="12"  />
                                        <Label  Grid.Row="5" Grid.Column="0"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding WednesdayParts}" FontSize="15"  />

                                        <Label  Grid.Row="6" Grid.Column="0" TextDecorations="Underline"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Start"
                                                Text="Czwartek" FontSize="12"  />
                                        <Label  Grid.Row="7" Grid.Column="0"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding ThursdayParts}" FontSize="15"  />

                                        <Label  Grid.Row="8" Grid.Column="0" TextDecorations="Underline"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Start"
                                                Text="Piątek" FontSize="12"  />
                                        <Label  Grid.Row="9" Grid.Column="0"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding FridayParts}" FontSize="15"  />

                                        <Label  Grid.Row="10" Grid.Column="0" TextDecorations="Underline"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Start"
                                                Text="Sobota" FontSize="12"  />
                                        <Label  Grid.Row="11" Grid.Column="0"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding SaturdayParts}" FontSize="15"  />

                                        <Label  Grid.Row="12" Grid.Column="0" TextDecorations="Underline"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Start"
                                                Text="Niedziela" FontSize="12"  />
                                        <Label  Grid.Row="13" Grid.Column="0"
                                                TextColor="{DynamicResource PrimaryColor}" 
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding SundayParts}" FontSize="15"  />



                                    </Grid>

                                </Border>
                            </VerticalStackLayout>
                        </DataTemplate>

                    </CollectionView.ItemTemplate>

                </CollectionView>


            </StackLayout>
        </ScrollView>
        <VerticalStackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center">
            <Button
            Command="{Binding NewTrainingPlanAddedCommand}" Opacity="0.5" Text="kliknij, aby dodać tygodniowy plan treningowy" LineBreakMode="CharacterWrap"
            FontSize="20" HorizontalOptions="Center" Padding="50" BorderWidth="1" Margin="20" IsVisible="{Binding IsDisplayButton}"
            TextColor="Black" Background="White" />


            <CollectionView
    ItemsSource="{Binding Plans}"
    SelectionMode="Single"
    SelectionChangedCommand="{Binding SelectReadyPlan}"
    SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}"
                IsVisible="{Binding IsDisplayButton}">


                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontSize="18" />
                                <Label Text="{Binding Description}" FontSize="13" TextColor="Gray"/>
                            </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </VerticalStackLayout>
    </Grid>

</ContentView>
