<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WorkoutDiary.Views.TrainingPlanHostPage" Title="{Binding CurrentTitle}" Shell.TitleColor="Black" BackgroundColor="#E5E5E5">



    <Grid RowDefinitions="*, auto">


            <ScrollView Grid.Row="0">

                <ContentView  Content="{Binding CurrentView}" />
            </ScrollView>

            <VerticalStackLayout Grid.Row="1" HorizontalOptions="End" VerticalOptions="End">

            <Button 
            Command="{Binding ToggleViewCommand}" BorderColor="black" Text="{Binding TextButtonChngePlan}" LineBreakMode="CharacterWrap" MinimumHeightRequest="50"
                    FontSize="10" HorizontalOptions="End" WidthRequest="60" Padding="0" BorderWidth="1" Margin="0,0,20,20" 
                    TextColor="{DynamicResource PrimaryColor}" Background="White" />
        </VerticalStackLayout>
    </Grid>
    
</ContentPage>

