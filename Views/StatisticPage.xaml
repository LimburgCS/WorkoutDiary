<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="WorkoutDiary.Views.StatisticPage"
             Title="Statystyka" Shell.TitleColor="white">

    <StackLayout>
        <Border Margin="10">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="15"/>
            </Border.StrokeShape>
            <Picker x:Name="namePicker" 
                Title="Wybierz partie"
                TitleColor="Black"
                TextColor="Black"
                BackgroundColor="White"
                SelectedIndexChanged="OnNameSelected">
            </Picker>
        </Border>

        <Label x:Name="LabelPart" HorizontalOptions="Center" FontSize="35" TextColor="White"/>
            <charts:ChartView x:Name="chartView" HeightRequest="300" />
        
        <Border Margin="20">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="15"/>
            </Border.StrokeShape>
        <Grid  Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Text="Progres[kg]" HorizontalOptions="Center" FontSize="25" TextColor="White"/>
                <Label Grid.Row="1" x:Name="ProgressLabel" HorizontalOptions="Center" FontSize="30" TextColor="White"/>
                <Label Grid.Row="2" Text="Ilość trenigów" HorizontalOptions="Center" FontSize="25" TextColor="White"/>
                <Label Grid.Row="3" x:Name="ProgressTime" HorizontalOptions="Center" FontSize="30" TextColor="White"/>
            </Grid>
        </Border>
    </StackLayout>

</ContentPage>