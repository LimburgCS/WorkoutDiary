<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutDiary.Views.MainPage"
                xmlns:local="clr-namespace:WorkoutDiary.Helper"
             xmlns:viewodel="clr-namespace:WorkoutDiary.ViewModels"
             NavigatedTo="ContentPage_NavigatedTo"
             Title="{Binding PageTitle}" Shell.TitleColor="{DynamicResource PrimaryColor}" BackgroundImageSource="lowpoly.jpg">



    <ContentPage.ToolbarItems >
        <ToolbarItem Text="Add" Command="{Binding NewExercise}" IconImageSource="{FontImage Glyph='+', Color=Black, Size=22}" />
    </ContentPage.ToolbarItems>
    <Grid RowDefinitions="auto,*,auto">



        <StackLayout Grid.Row="0">


            <Grid HorizontalOptions="Fill">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Grid.Row="0" HorizontalOptions="Start" Margin="10,0,0,0">
                    <DatePicker x:Name="datepicker" Grid.Row="0"   Grid.Column="0" DateSelected="DatePicker_DateSelected" BindingContext="{Binding DatePicker, Mode=TwoWay}" Format="dd.MM.yyyy"  />
                </Grid>
                <Grid Grid.Column="1" >
                    <Picker Grid.Column="0"
                       Title="Wybierz siłownie"
                       ItemsSource="{Binding Gym}"
                       SelectedItem="{Binding SelectedGym}" />
                   
                </Grid>
                <Grid Grid.Column="1" Grid.Row="1" Margin="0,15,0,0" ColumnSpacing="5" HorizontalOptions="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>

                    </Grid.ColumnDefinitions>
                    <ImageButton Grid.Row="0" Grid.Column="0" BackgroundColor="{DynamicResource PrimaryColor}" Source="/Resources/Images/caretleft.svg" Command="{Binding Back}"/>
                    <Label Grid.Row="0" Grid.Column="1"  TextColor="{DynamicResource PrimaryColor}" Text="{Binding DisplayNumberWeekText}" VerticalTextAlignment="Center"  FontSize="15" />
                    <ImageButton Grid.Row="0" Grid.Column="2"  BackgroundColor="{DynamicResource PrimaryColor}" Source="/Resources/Images/caretright.svg" Command="{Binding Next}" />
                </Grid>
                <Grid Grid.Column="2" Grid.Row="0" HorizontalOptions="End" Margin="0,0,10,0">
                    <Picker
                Title="Wybierz partię"
                ItemsSource="{Binding Parts}"
                SelectedItem="{Binding SelectedPart}" />
                </Grid>

            </Grid>
        </StackLayout>


        <ScrollView Margin="5" Grid.Row="1" VerticalOptions="Start">

            <StackLayout>

                <CollectionView x:Name="ExerciseCollectionView"
                         ItemsSource="{Binding BodyParts}"
                        Margin="20"
                        SelectionMode="Single"
                        
                        SelectionChangedCommand="{Binding SelectDayCommand}"
                        SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}">
                    <CollectionView.ItemsLayout>

                        <LinearItemsLayout Orientation="Vertical" />
 
                    </CollectionView.ItemsLayout>



                    <CollectionView.ItemTemplate>

                        <DataTemplate >
                            <VerticalStackLayout x:Name="Vertical" BackgroundColor="Transparent">

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <VisualState.Setters>
                                                <Setter TargetName="Vertical" Property="Scale" Value="1" />
                                                <Setter TargetName="Vertical" Property="TranslationY" Value="0" />
                                                <Setter TargetName="Vertical" Property="BackgroundColor" Value="Transparent" />
                                            </VisualState.Setters>
                                        </VisualState>

                                        <VisualState x:Name="Selected">
                                            <VisualState.Setters>
                                                <Setter TargetName="Vertical" Property="Scale" Value="0.96" />
                                                <Setter TargetName="Vertical" Property="TranslationY" Value="2" />
                                                <Setter TargetName="Vertical" Property="BackgroundColor" Value="Transparent" />
                                               
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <Label Text="{Binding DateTime, StringFormat='{0:dddd, dd.MM.yyyy}'}"
                                       FontAttributes="Bold"
                                       FontSize="12"
                                       TextColor="Black"
                                       IsVisible="{Binding ShowSeparator}" />

                                <Border
                                            Stroke="Transparent"
                                            Background="White"
                                            StrokeThickness="0"
                                            Margin="5"
                                            Padding="15"
                                            StrokeShape="RoundRectangle 10">

                                    <Border.Shadow>
                                        <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,1" />
                                    </Border.Shadow>


                                    <Grid  BackgroundColor="{DynamicResource PageBackgroundColor}">

                                        <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <!-- First column -->
                                        <ColumnDefinition Width="*" />
                                        <!-- Second column -->
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>




                                    <!-- First row: Categories and Price -->
                                    <Label  Grid.Row="0" Grid.Column="0" TextColor="{DynamicResource PrimaryColor}"  HorizontalTextAlignment="Center" Text="{Binding NameGym}" FontSize="10"  />
                                        <Button Grid.Row="0" Grid.Column="2" TextColor="{DynamicResource PrimaryColor}" Text="X" Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.Delete}" 
                            CommandParameter="{Binding .}" FontSize="12" HeightRequest="20" Padding="0" BackgroundColor="Transparent" HorizontalOptions="End" VerticalOptions="Start" WidthRequest="40" ZIndex="800"/>
                                    <Label Grid.Row="1" Grid.ColumnSpan="3" TextColor="{DynamicResource PrimaryColor}" HorizontalTextAlignment="Center"  LineBreakMode="WordWrap" Text="{Binding Part}" FontSize="18" />
                                    <Label Grid.Row="2" Grid.ColumnSpan="3" TextColor="{DynamicResource PrimaryColor}" HorizontalTextAlignment="Center"  LineBreakMode="WordWrap" Text="{Binding Comment}" TextDecorations="Underline" FontSize="13" />
                                    <Label Grid.Row="3" Grid.Column="0" TextColor="{DynamicResource PrimaryColor}" HorizontalTextAlignment="Center" Text="Serie" FontSize="15"  />
                                    <Label Grid.Row="4" Grid.Column="0" TextColor="{DynamicResource PrimaryColor}" HorizontalTextAlignment="Center" Text="{Binding Series}" FontSize="18"  />
                                    <Label Grid.Row="3" Grid.Column="1" TextColor="{DynamicResource PrimaryColor}" HorizontalTextAlignment="Center" Text="Powtórzenia" FontSize="15"  />
                                    <Label Grid.Row="4" Grid.Column="1" TextColor="{DynamicResource PrimaryColor}"  HorizontalOptions="Center" Text="{Binding Repetitions}" FontSize="18" />
                                    <Label Grid.Row="3" Grid.Column="2" TextColor="{DynamicResource PrimaryColor}" HorizontalTextAlignment="Center" Text="Obciążenie" FontSize="15"  />
                                    <Label Grid.Row="4" Grid.Column="2" TextColor="{DynamicResource PrimaryColor}" HorizontalOptions="Center" Text="{Binding Weight, StringFormat='{0:F2}kg'}" FontSize="18" />
                                    <!-- Delete button in the first row, right-aligned -->




                                     
                                
                                    </Grid>
                                </Border>
                            </VerticalStackLayout>
                        </DataTemplate>
                        
                    </CollectionView.ItemTemplate>
                    
                </CollectionView>

                <Label Text="Brak danych lub ćwiczenia znajdują się w innej siłowni" HorizontalOptions="Center" VerticalOptions="Center"
                        TextColor="black"
                        IsVisible="{Binding HasNoData}" />
            </StackLayout>
        </ScrollView>
        <StackLayout Grid.RowSpan="2" VerticalOptions="End" IsVisible="{Binding IsBottomGridVisible}" BackgroundColor="{DynamicResource PageBackgroundColor}">


            <Border StrokeShape="RoundRectangle 1" StrokeThickness="1" Stroke="{DynamicResource PrimaryColor}" >

                <Grid VerticalOptions="End" HorizontalOptions="Center" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width = "*"/>
                    <ColumnDefinition Width = "*"/>
                </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Text="Max ostatnie obciążenie "  HorizontalTextAlignment="Center" TextColor="{DynamicResource PrimaryColor}" FontSize="15" />
                    <Label Grid.Row="0" Grid.Column="1" HorizontalTextAlignment="Center"  Text="{Binding LastWeight, StringFormat='{0:F2}kg'}"  TextColor="{DynamicResource PrimaryColor}" FontSize="15" />
            </Grid>
            </Border>
        </StackLayout>
    </Grid>

</ContentPage>
